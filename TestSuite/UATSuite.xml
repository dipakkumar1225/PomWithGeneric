<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="RBL MyCard 2.0" parallel="tests" thread-count="3">

    <test name="Regression Test on UAT Chrome" >
        <classes>
            <class name="com.winjit.automation.runners.TestUATChrome">
                <parameter name="browserName" value="CHROME"/>
                <parameter name="isHeadless" value="false"/>
            </class>
        </classes>
    </test>

    <test name="Regression Test on UAT Firefox" >
        <classes>
            <class name="com.winjit.automation.runners.TestUATFirefox">
                <parameter name="browserName" value="FIREFOX"/>
                <parameter name="isHeadless" value="false"/>
            </class>
        </classes>
    </test>


    <test name="Regression Test on UAT Edge" >
        <classes>
            <class name="com.winjit.automation.runners.TestUATEdge">
                <parameter name="browserName" value="EDGE"/>
                <parameter name="isHeadless" value="true"/>
            </class>
        </classes>
    </test>


</suite>
